{
  "name": "@json-visual-diff/dom-renderer",
  "version": "0.0.1",
  "description": "DOM 渲染器，将差异结果渲染为可交互的浏览器 DOM 元素，支持主题切换、无障碍访问和键盘导航",
  "keywords": [
    "diff",
    "dom",
    "json",
    "renderer",
    "visualization"
  ],
  "license": "MIT",
  "author": "",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@json-visual-diff/core": "workspace:*"
  },
  "devDependencies": {
    "fast-check": "^3.22.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
