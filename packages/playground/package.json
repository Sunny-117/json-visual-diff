{
  "name": "@json-visual-diff/playground",
  "version": "0.0.1",
  "description": "交互式演示应用，集成 Monaco Editor，提供实时编辑预览、响应式设计和完整的差异对比体验",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@json-visual-diff/core": "workspace:*",
    "@json-visual-diff/dom-renderer": "workspace:*",
    "@monaco-editor/react": "^4.6.0",
    "monaco-editor": "^0.52.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "fast-check": "^3.23.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
